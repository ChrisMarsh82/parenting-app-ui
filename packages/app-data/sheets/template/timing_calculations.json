{
  "flow_type": "template",
  "flow_name": "timing_calculations",
  "status": "released",
  "process_on_start": 1,
  "rows": [
    {
      "name": "app_first_launch",
      "value": "@calc(this.app_first_launch)",
      "_translations": {
        "value": {}
      },
      "exclude_from_translation": true
    },
    {
      "name": "today_end",
      "value": "@calc(window.date_fns.endOfDay(new Date()))",
      "_translations": {
        "value": {}
      },
      "exclude_from_translation": true
    },
    {
      "type": "display_group",
      "name": "initial_benchmarks",
      "condition": "!@fields.benchmark_date",
      "parameter_list": [
        "style:column"
      ],
      "rows": [
        {
          "type": "set_field",
          "name": "workshop_start_day",
          "value": "@calc(window.date_fns.getDay(new Date(@local.app_first_launch)))",
          "_translations": {
            "value": {}
          },
          "exclude_from_translation": true
        },
        {
          "type": "set_field",
          "name": "benchmark_date",
          "value": "@local.app_first_launch",
          "_translations": {
            "value": {}
          }
        },
        {
          "type": "set_field",
          "name": "benchmark_workshop_number",
          "value": 1
        }
      ]
    },
    {
      "type": "set_field",
      "name": "workshop_start_day_label",
      "value": "Sunday",
      "_translations": {
        "value": {
          "tz_sw": true,
          "za_af": true,
          "za_st": true,
          "za_tn": true,
          "za_xh": true,
          "za_zu": true
        }
      },
      "condition": "@fields.workshop_start_day == 0"
    },
    {
      "type": "set_field",
      "name": "workshop_start_day_label",
      "value": "Monday",
      "_translations": {
        "value": {
          "tz_sw": true,
          "za_af": true,
          "za_st": true,
          "za_tn": true,
          "za_xh": true,
          "za_zu": true
        }
      },
      "condition": "@fields.workshop_start_day == 1"
    },
    {
      "type": "set_field",
      "name": "workshop_start_day_label",
      "value": "Tuesday",
      "_translations": {
        "value": {
          "tz_sw": true,
          "za_af": true,
          "za_st": true,
          "za_tn": true,
          "za_xh": true,
          "za_zu": true
        }
      },
      "condition": "@fields.workshop_start_day == 2"
    },
    {
      "type": "set_field",
      "name": "workshop_start_day_label",
      "value": "Wednesday",
      "_translations": {
        "value": {
          "tz_sw": true,
          "za_af": true,
          "za_st": true,
          "za_tn": true,
          "za_xh": true,
          "za_zu": true
        }
      },
      "condition": "@fields.workshop_start_day == 3"
    },
    {
      "type": "set_field",
      "name": "workshop_start_day_label",
      "value": "Thursday",
      "_translations": {
        "value": {
          "tz_sw": true,
          "za_af": true,
          "za_st": true,
          "za_tn": true,
          "za_xh": true,
          "za_zu": true
        }
      },
      "condition": "@fields.workshop_start_day == 4"
    },
    {
      "type": "set_field",
      "name": "workshop_start_day_label",
      "value": "Friday",
      "_translations": {
        "value": {
          "tz_sw": true,
          "za_af": true,
          "za_st": true,
          "za_tn": true,
          "za_xh": true,
          "za_zu": true
        }
      },
      "condition": "@fields.workshop_start_day == 5"
    },
    {
      "type": "set_field",
      "name": "workshop_start_day_label",
      "value": "Saturday",
      "_translations": {
        "value": {
          "tz_sw": true,
          "za_af": true,
          "za_st": true,
          "za_tn": true,
          "za_xh": true,
          "za_zu": true
        }
      },
      "condition": "@fields.workshop_start_day == 6"
    },
    {
      "type": "set_field",
      "name": "benchmark_day",
      "value": "@calc( (window.date_fns.getDay(new Date(@fields.benchmark_date)) - @fields.workshop_start_day +7) % 7)",
      "_translations": {
        "value": {}
      },
      "exclude_from_translation": true
    },
    {
      "name": "days_since_benchmark_date",
      "value": "@calc(window.date_fns.differenceInDays(@local.today_end, new Date(@fields.benchmark_date)))",
      "_translations": {
        "value": {}
      },
      "exclude_from_translation": true
    },
    {
      "type": "set_field",
      "name": "workshop_number",
      "value": "@calc( +@fields.benchmark_workshop_number + Math.floor((@local.days_since_benchmark_date + +@fields.benchmark_day)/7) )",
      "_translations": {
        "value": {}
      },
      "exclude_from_translation": true
    },
    {
      "type": "set_field",
      "name": "workshop_day",
      "value": "@calc( (window.date_fns.getDay(@local.today_end) - @fields.workshop_start_day + 7) % 7 )",
      "_translations": {
        "value": {}
      },
      "exclude_from_translation": true
    },
    {
      "type": "items",
      "value": "@data.workshop",
      "exclude_from_translation": true,
      "rows": [
        {
          "type": "set_field",
          "name": "workshop_id",
          "value": "@item.id",
          "_translations": {
            "value": {}
          },
          "condition": "@item.number == @fields.workshop_number",
          "exclude_from_translation": true
        }
      ]
    }
  ],
  "_xlsxPath": "global/campaigns/timing_calculations.xlsx"
}